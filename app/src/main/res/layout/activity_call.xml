<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_brown"
    tools:context=".call">
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button_more_more"
        android:src="@drawable/danny_rob"
        android:scaleType="fitXY"
        android:clipToOutline="true">
    </ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Danny ðŸ™‚"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="18dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="03:12"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_margin="18dp">
    </TextView>

    <ImageButton
        android:id="@+id/callEnd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/phone"
        android:layout_margin="48dp"
        android:scaleType="fitXY"
        android:background="@color/transparent">
    </ImageButton>

    <ImageButton
        android:id="@+id/message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/callEnd"
        android:src="@drawable/message"
        android:layout_marginBottom="74dp"
        android:layout_marginEnd="64dp"
        android:scaleType="fitXY"
        android:background="@color/transparent">
    </ImageButton>

    <ImageButton
        android:id="@+id/soundOn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/callEnd"
        android:src="@drawable/soundon"
        android:layout_marginBottom="64dp"
        android:layout_marginStart="64dp"
        android:scaleType="fitXY"
        android:background="@color/transparent"/>


</androidx.constraintlayout.widget.ConstraintLayout>