<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/story_1"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/story_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/linewhite"
        android:layout_margin="16dp"
        android:background="@color/dark_grey"
        android:scaleType="fitStart"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/story_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/grey"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/story_line"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Highlight"
        android:textColor="@color/white"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/story_line"
        android:layout_margin="16dp"
        android:text="December 3, 2023"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/profile_image"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginLeft="16dp"
        android:text="၊၊||၊ Artist . Song Title"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="x"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:layout_margin="16dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/highlight_bar"
        android:scaleType="fitXY"/>
</androidx.constraintlayout.widget.ConstraintLayout>