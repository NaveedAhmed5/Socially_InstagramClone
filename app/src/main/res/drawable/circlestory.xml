<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color of the circle -->
    <solid android:color="@color/transparent" />

    <!-- Size of the circle -->
    <size
        android:width="90dp"
        android:height="90dp" />

    <!-- Optional border -->
    <stroke
        android:width="3dp"
        android:color="@color/purple_pink" />

</shape>
