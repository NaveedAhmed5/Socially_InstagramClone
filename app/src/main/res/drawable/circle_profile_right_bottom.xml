<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Background color of the circle -->
    <solid android:color="@color/dark_grey" />

    <!-- Size of the circle -->
    <size
        android:width="20dp"
        android:height="20dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="@color/brown" />

</shape>
